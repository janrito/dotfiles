                "command": "side_bar_files_open_with",
                "args": {
                                    "paths": [],
                                    "application": "Mou.app",
                                    "extensions":"mmd|md|txt" //any file with extension
                                }
            },

            {"caption":"-"},
            {
                "caption": "Oxygen",
                "id": "side-bar-files-open-with-oxygen",

                "command": "side_bar_files_open_with",
                "args": {
                                    "paths": [],
