{
  "editor.fontFamily": "Iosevka, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  // Controls how the editor should render whitespace characters, possibilities are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
  "editor.renderWhitespace": "all",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/*.pyc": {
      "when": "$(basename).py"
    },
    "**/*.ipynb_checkpoints": true
  },
  "python.formatting.provider": "black",
  // When enabled, will trim trailing whitespace when saving a file.
  "files.trimTrailingWhitespace": true,
  "editor.rulers": [72, 80, 100, 150],
  // Whether to lint Python files using flake8
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8",
  // Folders to look into for virtual environments.
  "python.venvFolders": [
    ".env",
    "envs",
    ".pyenv",
    ".direnv",
    ".venv"
  ],
  // Path to folder with a list of Virtual Environments (e.g. ~/.pyenv, ~/Envs, ~/.virtualenvs).
  "python.venvPath": "~/.virtualenvs",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  // A list of languages IDs to disable this extension on
  "prettier.disableLanguages": ["vue", "markdown"],
  "editor.minimap.enabled": false,
  "prettier.singleQuote": true,
  "window.closeWhenEmpty": true,
  "editor.detectIndentation": true,
  "editor.showFoldingControls": "always",
  "editor.find.seedSearchStringFromSelection": true,
  "editor.useTabStops": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "npm.enableRunFromFolder": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "python.insidersChannel": "weekly",
  "notebook.lineNumbers": "on",
  "telemetry.enableTelemetry": false,
  "python.linting.pylintEnabled": false,
  "editor.inlineSuggest.enabled": true,
  "cSpell.userWords": [
    "ngram",
    "noqa"
  ],
  "cSpell.language": "en-GB",
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": false
  },
  "theme-by-language.themes": {
  "*ipynb": "Quiet Light",
  },
  "jupyter.ignoreVscodeTheme": true,
  "jupyter.themeMatplotlibPlots": true,
  "workbench.colorTheme": "One Dark Pro",
  "editor.minimap.renderCharacters": false,
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "explorer.confirmDelete": false,
  "jupyter.askForKernelRestart": false,
  "editor.fontSize": 13
}