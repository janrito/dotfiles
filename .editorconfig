root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.bash]
indent_size = 4

[*.{xml,htm,html,tmTheme}]
indent_size = 4

[*.{json,sublime-settings}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
