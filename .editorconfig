root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.sh]
indent_size = 2

[*.{xml,htm,html,tmTheme}]
indent_size = 4

[*.{json,sublime-settings}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
indent_size = 4
trim_trailing_whitespace = false
